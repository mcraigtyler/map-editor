{
  "name": "@maped/api",
  "private": true,
  "version": "0.0.0",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "pnpm run openapi && tsc -p tsconfig.json",
    "dev": "pnpm run openapi && ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src --max-warnings 0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "openapi": "tsoa spec && tsoa routes"
  },
  "dependencies": {
    "@tsoa/runtime": "^6.1.0",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "tsoa": "^6.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.12.7",
    "ts-node-dev": "^2.0.0"
  }
}
